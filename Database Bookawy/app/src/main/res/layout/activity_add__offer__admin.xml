<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.antou.bookawytest.Add_offer_or_request"
    android:background="@drawable/book"

    >

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/Admin_Search"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="Search"
        android:id="@+id/Admin_B"
        android:layout_alignTop="@+id/Admin_Search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Check if it exists choose it, otherwise add new"
        android:id="@+id/textView37"
        android:layout_below="@+id/Admin_Search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/Admin_Search_LV"
        android:layout_below="@+id/textView37"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New"
        android:id="@+id/Admin_Add_New"
        android:onClick="add_new"
        android:layout_below="@+id/textView39"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView38"
        android:layout_below="@+id/textView37"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_________________OR_________________"
        android:id="@+id/textView39"
        android:layout_below="@+id/Admin_Search_LV"
        android:layout_toStartOf="@+id/Admin_Search"
        android:layout_alignRight="@+id/Admin_Search"
        android:layout_alignEnd="@+id/Admin_Search"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/textView40"
        android:layout_below="@+id/textView38"
        android:layout_alignLeft="@+id/textView39"
        android:layout_alignStart="@+id/textView39" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Admin_Price"
        android:layout_alignBottom="@+id/textView40"
        android:layout_alignLeft="@+id/Admin_Add_New"
        android:layout_alignStart="@+id/Admin_Add_New"
        android:layout_alignRight="@+id/textView38"
        android:layout_alignEnd="@+id/textView38" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EGP"
        android:id="@+id/textView41"
        android:layout_alignBottom="@+id/Admin_Price"
        android:layout_toRightOf="@+id/textView38"
        android:layout_toEndOf="@+id/textView38" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Field"
        android:id="@+id/textView42"
        android:layout_below="@+id/textView40"
        android:layout_alignRight="@+id/textView40"
        android:layout_alignEnd="@+id/textView40"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Admin_Field"
        android:layout_alignTop="@+id/textView42"
        android:layout_alignLeft="@+id/Admin_Price"
        android:layout_alignStart="@+id/Admin_Price"
        android:layout_toStartOf="@+id/textView41"
        android:layout_alignRight="@+id/Admin_Add_New"
        android:layout_alignEnd="@+id/Admin_Add_New"
        android:layout_marginTop="-15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*If more than one field. Seperate them by &quot;,&quot; without any spaces"
        android:id="@+id/textView43"
        android:layout_below="@+id/Admin_Field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
